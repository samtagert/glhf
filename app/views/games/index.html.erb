<div class="row">
  <% @games.each do |game| %>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <img src="https://www.dualshockers.com/wp-content/uploads/2017/06/H2x1_NSwitch_SuperMarioOdyssey.jpg">
        </div>
        <div class="card-action blue-grey darken-2">
        <%= link_to(game.name, game_path(game)) %><span class="right"><%= game.review_avg %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>