<h4 ><%= @game.name %></h4>
<div class="video-container">
<iframe width="854" height="480" src="https://www.youtube.com/embed/wGQHQc_3ycE" frameborder="0" gesture="media" allowfullscreen></iframe>
</div>

<%= form_for [@game, @review] do |f| %>
  <div class="field">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Create Review
    <i class="material-icons right">send</i>
  </button>
<% end %>

<h4><%= @game.name %>'s reviews</h4>
<div class="row">
  <% @game.reviews.each do |review| %>
    <div class="col s12 m12">
      <div class="card blue-grey darken-2">
        <div class="card-content">
          <span class="card-title"><%= review.rating %></span>
          <p><%= review.content %></p>
        </div>
        <div class="card-action">
          Reviewed by: &nbsp;<%= link_to review.user.user_name, user_path(review.user) %>
          <%= link_to 'Delete', review_path(review), method: 'delete', class: 'right' if review.user == current_user %>
        </div>
      </div>
    </div>
  <% end %>
</div>